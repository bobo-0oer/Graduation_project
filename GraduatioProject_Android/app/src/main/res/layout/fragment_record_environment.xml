<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tools.FragmentManager">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/ChildViewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </androidx.viewpager.widget.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/icon_tem"
            android:gravity="center"
            android:padding="14dp"
            android:background="@drawable/style_button_select">
        </TextView>

        <View
            android:layout_width="10dp"
            android:layout_height="20dp">
        </View>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/icon_hum"
            android:gravity="center"
            android:padding="14dp"
            android:background="@drawable/style_button_select">
        </TextView>

        <View
            android:layout_width="10dp"
            android:layout_height="20dp">
        </View>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/icon_smog"
            android:gravity="center"
            android:padding="14dp"
            android:background="@drawable/style_button_select">
        </TextView>

        <View
            android:layout_width="10dp"
            android:layout_height="20dp">
        </View>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/icon_plus"
            android:gravity="center"
            android:padding="14dp"
            android:background="@drawable/style_button_select">
        </TextView>

        <View
            android:layout_width="13dp"
            android:layout_height="20dp">
        </View>

    </LinearLayout>

</LinearLayout>