<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tools.FragmentManager">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/myViewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </androidx.viewpager.widget.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/homeTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/menu_background"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/menu_home"
            android:gravity="center"
            android:padding="10dp"
            android:text="主页"
            android:textColor="@drawable/menu_text_style"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/controlTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/menu_background"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/menu_control"
            android:gravity="center"
            android:padding="10dp"
            android:text="控制"
            android:textColor="@drawable/menu_text_style"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/outdoorTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/menu_background"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/menu_outdoor"
            android:gravity="center"
            android:padding="10dp"
            android:text="户外"
            android:textColor="@drawable/menu_text_style"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/myTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/menu_background"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/menu_my"
            android:gravity="center"
            android:padding="10dp"
            android:text="我的"
            android:textColor="@drawable/menu_text_style"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>