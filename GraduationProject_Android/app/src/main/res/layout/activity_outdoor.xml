<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    android:id="@+id/outdoorLL"
    tools:context=".FragmentOutdoor.OutdoorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#3c3c3c">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="户外模式"
            android:textSize="20dp"
            android:textColor="#f4f4f4"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="节点总数：5"
            android:textSize="26dp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textSize="18dp"
                android:text="启用节点数:">
            </TextView>
            <TextView
                android:id="@+id/countNode"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center|left"
                android:text="0"
                android:textSize="18dp">
            </TextView>

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center|right"
                android:textSize="18dp"
                android:text="连接个数:">
            </TextView>
            <TextView
                android:id="@+id/usefulNode"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center|left"
                android:text="0"
                android:textSize="18dp">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="365dp"
        android:layout_height="50dp"
        android:gravity="center|left"
        android:text="● 节点详情"
        android:textSize="20dp"
        android:textStyle="bold">
    </TextView>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="MAC地址：1DE25305004B1200"
                    android:textSize="16dp">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="描述：宠物"
                    android:textSize="16dp">
                </TextView>
            </LinearLayout>
            <TextView
                android:id="@+id/stateNode1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="26dp">
            </TextView>
            <com.example.graduatioproject_android.tools.SlideButton
                android:id="@+id/slideNode1"
                android:layout_width="65dp"
                android:layout_height="30dp">
            </com.example.graduatioproject_android.tools.SlideButton>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#e4e4e4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="MAC地址：56DD5305004B1200"
                    android:textSize="16dp">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="描述：宠物"
                    android:textSize="16dp">
                </TextView>
            </LinearLayout>
            <TextView
                android:id="@+id/stateNode2"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="26dp">
            </TextView>
            <com.example.graduatioproject_android.tools.SlideButton
                android:id="@+id/slideNode2"
                android:layout_width="65dp"
                android:layout_height="30dp">
            </com.example.graduatioproject_android.tools.SlideButton>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#e4e4e4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="MAC地址：AD625305004B1200"
                    android:textSize="16dp">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="描述：小孩"
                    android:textSize="16dp">
                </TextView>
            </LinearLayout>
            <TextView
                android:id="@+id/stateNode3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="26dp">
            </TextView>
            <com.example.graduatioproject_android.tools.SlideButton
                android:id="@+id/slideNode3"
                android:layout_width="65dp"
                android:layout_height="30dp">
            </com.example.graduatioproject_android.tools.SlideButton>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#e4e4e4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="MAC地址：DBDD5305004B1200"
                    android:textSize="16dp">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="描述：老人"
                    android:textSize="16dp">
                </TextView>
            </LinearLayout>
            <TextView
                android:id="@+id/stateNode4"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="26dp">
            </TextView>
            <com.example.graduatioproject_android.tools.SlideButton
                android:id="@+id/slideNode4"
                android:layout_width="65dp"
                android:layout_height="30dp">
            </com.example.graduatioproject_android.tools.SlideButton>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>